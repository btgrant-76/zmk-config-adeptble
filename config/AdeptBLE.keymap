#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/outputs.h>

// #include <dt-bindings/zmk/mouse.h>

#define BACK LG(LBKT)
#define FWD  LG(RBKT)

#define UNDO_    &kp LG(Z)
#define CUT_     &kp LG(X)
#define COPY_    &kp LG(C)
#define PASTE_   &kp LG(V)
#define REDO_    &kp LS(LG(Z))
#define MISS_CTL &kp LC(UP)
#define EXPOSE   &kp LC(DOWN)

#define DEFAULT 0
#define SCRLM 1
#define SCRLH 2
#define DEVICE 3
#define BLTH 4
#define SNIPE 5
#define MEDIA 6

/ {
  combos {
    compatible = "zmk,combos";
    combo_esc {
      timeout-ms = <50>; // TODO what is the default?
      key-positions = <2 3>;
      bindings = <&mkp RCLK>;
    };
    copy {
      timeout-ms = <50>;
      key-positions = <3 4>;
      bindings = <&kp LG(C)>;
    };
    paste {
      timeout-ms = <50>;
      key-positions = <4 5>;
      bindings = <&kp LG(V)>;
    };
    cut {
      timeout-ms = <50>;
      key-positions = <0 1>;
      bindings = <&kp LG(X)>;
    };
    media_layer_toggle {
      timeout-ms = <50>;
      key-positions = <0 4>;
      bindings = <&tog MEDIA>;
    };

    /* TODO combos to create
        - btn1 + btn2:  copy
        - btn1 + scroll:  paste
        - back + fwd:  cut
        - btn1 + back:  toggle to media layer
        - media back + media fwd:  play/pause
     */
  };
  behaviors {
    ltm: layer-tap-momentary {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      flavor = "tap-preferred";
      tapping-term-ms = <200>;
      bindings = <&mo>, <&kp>;
    };
    lth: layer-tap-hold-while-undecided {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      flavor = "hold-preferred";
      hold-while-undecided;
      tapping-term-ms = <150>;
      bindings = <&mo>, <&mkp>;
    };
    mto: momentary-or-toggle {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      flavor = "hold-preferred";
      hold-while-undecided;
      tapping-term-ms = <200>;
      bindings = <&mo>, <&to>;
    };
  };
  keymap {
    compatible = "zmk,keymap";
    default_layer {
      display-name = "Default";
      bindings = <
        &ltm BLTH BACK  &ltm DEVICE FWD   &mkp MCLK     &mkp RCLK
        &mkp LCLK                                       &mto SCRLM SNIPE
      >;
    };
    scroll_tap_layer {
      display-name = "Scroll-Momentary";
      bindings = <
        &trans          &trans            &to SCRLH     &trans
        &to SCRLH                                       &trans
      >;
    };
    scroll_hold_layer {
      display-name = "Scroll-Keep";
      bindings = <
        &trans          &trans            &trans        &to DEFAULT
        &trans                                          &to DEFAULT
      >;
    };
    device_layer {
      display-name = "Device";
      bindings = <
        &bootloader     &trans            &trans        &out OUT_TOG
        &trans                                          &bt BT_CLR
      >;
    };
    bluetooth_layer {
      display-name = "Bluetooth";
      bindings = <
        &trans          &bt BT_SEL 0      &bt BT_SEL 1  &bt BT_SEL 2
        &bt BT_SEL 3                                    &bt BT_SEL 4
      >;
    };
    snipe_layer {
      display-name = "Snipe";
      bindings = <
        &trans          &trans            &trans        &lth SCRLM RCLK
        &trans                                          &to DEFAULT
      >;
    };
    media_layer {
      display-name = "Media";
      bindings = <
        &kp C_PREV      &kp C_NEXT        MISS_CTL      EXPOSE
        &trans                                          &tog MEDIA
        /*
          prev next mission control expose
          btn1                      toggle to default
         */
      >;
    };
  };
};
